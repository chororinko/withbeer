<div class="container mb-5" style="margin-bottom: 100px;">
  <div class="row">
    <div class="col-2 text-center mt-5 mb-4">
      <h4>今月のおすすめ履歴一覧</h4>
    </div>
    <div class="col mt-5 d-flex justify-content-end">
      <h1><%= link_to '新規登録', new_admin_recommendation_snack_path, class: 'btn btn-lg btn-outline-dark rounded-circle'%></h1>
    </div>
  </div>

  <table class="col">
    <thead class="table table-active">
      <tr>
        <th>作成日時</th>
        <th>組み合わせ</th>
        <th></th>
        <th>いいね数</th>
      </tr>
    </thead>
    <% @snacks.each do |snack| %>
    <tbody class="table table-borderless">
      <tr>
        <td><%= snack.created_at.strftime("%Y/%m/%d") %></td>
        <td>
          <style>
            .link-underline-dark {
            text-decoration: underline;
            }
          </style>
          <%= link_to admin_recommendation_snack_path(snack), class: "text-dark link-underline-dark" do %>
            <strong><%= snack.name %></strong>
          <% end %>
        </td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active %>
            <strong><span class="text-success">販売中</span></strong>
          <% else %>
            <strong><span class="text-secondary">販売停止中</span></strong>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="row d-flex justify-content-center mt-3">
    <%= paginate @snacks %>
  </div>
</div>

