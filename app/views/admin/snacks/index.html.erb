<!--特定の会員のおつまみ一覧-->
<div class="container" style="margin-bottom: 120px; margin-top: 60px; margin-left: 100px;">
  <div class="row mb-5">
    <%= form_with model: @customer do |f| %>
      <h4><%= @customer.user_name %>さんのおつまみレシピ一覧</h4>
    <% end %>
  </div>

  <div class="row" style="margin-left: 150px; margin-right: 170px;">
    <%= render 'public/customers/snacks-index', snacks: @snacks %>
  </div>

  <div class="row justify-content-center">
    <%= paginate @snacks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
