<!--おつまみ詳細画面-->
<div class="container" style="margin-bottom: 200px; margin-top: 50px;">
  <!--おつまみ情報-->
  <div class="row d-flex justify-content-center">
    <h4><%=safe_join(snack.title.split("\n"),tag(:br))%></h4>     <!--改行表示-->
  </div>

  <div class="row mt-5">
    <div class="col">
      <%= image_tag snack.get_image(400,400) %>
    </div>
    <table class="table table-borderless col">
      <tr>
        <th class="col-5"><h5>おつまみ紹介文</h5></th>
      </tr>
      <tr>
        <td><%=safe_join(snack.introduction.split("\n"),tag(:br))%></td>
      </tr>
      <tr>
        <td>合うお酒：　<strong><%= snack.sake.genre %></storong></td>
      </tr>
      <tr>
        <td>タグ：
        <% snack_tags.each do |tag| %>
          <strong><i class="fa-sharp fa-solid fa-tag"></i>
            <%= link_to tag.name,search_tag_path(tag_id: tag.id) %>
          </storong>
        <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <% if snack.customer.present? %>
            <%= link_to customer_path(snack.customer) do %>
              <%= image_tag snack.customer.get_profile_image(100,100), class: 'rounded-circle' %>
              <%= snack.customer.user_name %>
            <% end %>
          <% else %>
            <tr>
              <td>運営者による投稿</td>
            </tr>
          <% end %>
        </td>
      </tr>
    </table>
  </div>

  <!--おつまみのレシピ情報-->
  <div class="row d-flex justify-content-center  mt-5">
    <h4>レシピ</h4>
  </div>

  <div class="row  mt-5">
    <div class="col">
      <h5>材料</h5>
    </div>
    <div class="col">
      <h5>作り方</h5>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col">
      <p><%=safe_join(snack.ingredients.split("\n"),tag(:br))%></p>
    </div>
    <div class="col">
      <p><%=safe_join(snack.process.split("\n"),tag(:br))%></p>
    </div>
  </div>

  <!--いいね-->
  <h5>
    <div id="favorite-btn_<%= snack.id %>" class="row justify-content-end mr-5">
      <%= render 'public/favorites/favorite-btn', snack: @snack %>
    </div>
  </h5>

  <!--投稿の編集＆削除-->
  <% if admin_signed_in?%>
    <div class="row mt-5 justify-content-center">
      <%= link_to '編集する', edit_admin_recommendation_snack_path(snack), class: 'col-3 btn btn-info btn-lg rounded-pill' %>
    </div>
    <div class="row mt-5 mb-5 mr-3 justify-content-end">
      <%= link_to '投稿の削除', admin_recommendation_snack_path(snack), method: :delete,
      "data-confirm" => "この投稿を削除してよろしいですか?", class: 'btn btn-danger btn-sm rounded-pill' %>
    </div>
  <% end %>

  <!--コメント-->
  <div class="container-6">
    <div class="row">
      <div class="col-6 comment-index">
        <%= render 'public/snack_comments/comment-index', snack: @snack, snack_comment: @snack_comment %>
      </div>
    </div>
  </div>

  <!--コメントフォーム-->
    <div class="col-5">
      <% if customer_signed_in? %>
        <%= form_with model: [@snack, @snack_comment], local: false do |f| %>
          <%= f.text_area :comment, rows:'5', placeholder: 'ここにコメントを記述します', class: 'col-8 ml-5 pl-5' %>
          <%= f.submit '送信' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>