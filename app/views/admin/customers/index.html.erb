<div class="container">
  <div class="row">
    <h4>会員一覧</h4>
  </div>
  <div class="row">
    <table class="table table">
      <tr>
        <th>会員ID</th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>会員ステータス</th>
      </tr>
      <% @customers.each do |customer|%>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%=link_to admin_customer_path(customer), class: 'text-dark underline' do %>
            <%= customer.user_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active? %>
            <strong><span class="text-success">有効</span></strong>
          <% else %>
            <strong><span class="text-secondary">退会済み</span></strong>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="row d-flex justify-content-center mt-3">
    <%= paginate @customers %>
  </div>
</div>