<div class="container" style="margin-bottom: 150px; margin-top: 50px;">
  <div class="row ml-4">
    <h3>”<strong><%= @word %></strong>” に関連するおつまみ（<%= @snacks.total_count %>品）</h3>
  </div>

  <!--タグ検索-->
  <div class="row">
    <div class="col-2 mr-5" style="margin-top: 60px;">
      <%= render 'public/homes/taglist', tags: @tags%>
    </div>

    <!--キーワードに紐づいた投稿一覧-->
    <% if @snacks.present? %>
      <div class="snack-list col d-flex flex-wrap" style="margin-top: 60px;">
        <% @snacks.each do |snack| %>
          <%= render 'public/snacks/list', snack: snack %>
        <% end %>
      </div>
    <% else %>
      <h4 class="col text-center text-muted" style="margin-top: 100px; margin-right: 220px;">
        投稿はまだありません
      </h4>
    <% end %>
  </div>

  <div class="pagination row justify-content-center" style="margin-top: 70px;">
    <%= paginate @snacks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>