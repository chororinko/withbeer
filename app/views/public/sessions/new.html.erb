<div class="container" style="margin-top: 60px;">
  <div class="col">
    <%= alert %>
  </div>

  <div class="row justify-content-center">
    <h4>ログイン</h4>
  </div>

  <%= form_with model: @customer, url: customer_session_path, method: :post do |f|%>
    <div class="row justify-content-center mt-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレスを入力', class: "col-4" %>
    </div>

    <div class="row justify-content-center mt-4">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワードを入力', class: "col-4"  %><br>
    </div>

    <div class="row justify-content-center mt-5">
      <%= f.submit 'ログイン', class: 'btn btn-primary col-4 rounded-pill' %><br>
    </div>

    <div class="row justify-content-center mt-5">
      <h8><%= link_to '会員登録がお済みでない方はこちら', new_customer_registration_path %></h8>
    </div>
  <% end %>
</div>

