<div class="notice mt-2 ml-3">
  <%= flash[:notice] %>
</div>

<div class="container" style="margin-bottom: 180px; margin-top: 40px;">
  <div class="row mb-3" style="margin-left: 50px;">
    <% if @customer == current_customer %>
      <h4>マイページ</h4>
    <% else %>
      <h4><%= @customer.user_name %>さんのページ</h4>
    <% end %>
  </div>

  <%= form_with model: @customer do |f| %>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @customer.get_profile_image(200,200), class: 'rounded-circle col mb-3' %>
      <table class="table table-borderless">
        <tr>
          <td class="col-4" style="margin-bottom: 20px;">ユーザー名：</td>
          <td class="col-8"><%= @customer.user_name %></td>
        </tr>
        <tr>
          <td class="col-4">自己紹介：</td>
          <td class="col-8"><%= @customer.introduction %></td>
        </tr>
      </table>
      <% if @customer == current_customer && !@customer.guest_user? %>
    　<div>
        <%= link_to edit_customer_path(@customer), class: 'btn btn-outline-secondary col mb-5' do %>
          <i class="fa-solid fa-gear"></i>設定
        <% end %>
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="mb-3 ml-2" style="font-size: 20px;">
        <strong>マイおつまみレシピ</strong>
      </div>
      <%= render 'public/customers/snacks-index', snacks: @snacks %>
    </div>
  </div>
  <% end %>

  <div class="row justify-content-center mb-3">
    <%= paginate @snacks %>
  </div>

</div>