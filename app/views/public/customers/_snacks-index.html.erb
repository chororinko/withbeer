<table class="table table ml-5 mr-1">
  <% snacks.each do |snack| %>
    <tr>
      <td class="col-3">
        <%= link_to snack_path(snack) do %>
          <%= image_tag snack.get_image(100,100) %>
        <% end %>
      </td>
      <td class="col-5">
        <div style="width: 100%; max-width: 300px; word-break: break-word;">
          <%= link_to snack_path(snack) do %>
            <%= snack.title %>
          <% end %>
        </div>
      </td>
      <td id="favorite-btn_<%= snack.id %>" class="col-2">
        <%= render 'public/favorites/favorite-btn', snack: snack %>
      </td>
      <td class="col-2">コメント：<%= snack.snack_comments.count %></td>
    </tr>
  <% end %>
</table>

