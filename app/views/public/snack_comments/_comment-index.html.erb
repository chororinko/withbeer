<!--コメント内容-->
<div class="row">
  <% snack_comments.each do |comment| %>
    <div class="col-3">
      <%= link_to customer_path(comment.customer) do %>
        <%= image_tag(comment.customer.get_profile_image(100,100), class: 'rounded-circle') %><br>
        <div class="col mb-5"><%= comment.customer.user_name %></div>
      <% end %>
    </div>
    <div class="col-7 pt-2 mb-5">
      <div class="snack-comment">
        <%= comment.comment %>
      </div>
    </div>
    <div class="col-2 pt-3">
      <% if comment.customer == current_customer %>
        <%= link_to snack_snack_comment_path(comment.snack, comment), method: :delete, remote: true do %>
          <h5><i class="fa-solid fa-trash-can" style="color:red;"></i></h5>
        <% end %>
      <% elsif admin_signed_in? %>
        <%= link_to admin_snack_snack_comment_path(comment.snack, comment),
        method: :delete, remote: true, "data-confirm" => "このコメントを削除してよろしいですか?" do %>
        <h5><i class="fa-solid fa-trash-can" style="color:red;"></i></h5>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>


