<!--コメント内容-->
<div class="row">
  <% snack.snack_comments.each do |comment| %>
    <div class="col-3">
      <%= link_to customer_path(comment.customer) do %>
        <%= image_tag(comment.customer.get_profile_image(100,100), class: 'rounded-circle') %><br>
        <div class="col mb-5"><%= comment.customer.user_name %></div>
      <% end %>
    </div>
    <div class="col-7 pt-2 mb-5"><%=safe_join(comment.comment.split("\n"),tag(:br))%></div>
    <div class="col-2 pt-2">
      <% if comment.customer == current_customer %>
        <%= link_to snack_snack_comment_path(comment.snack, comment), method: :delete, remote: true, class: 'btn btn-secondary btn-sm' do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      <% elsif admin_signed_in? %>
        <%= link_to '削除', admin_snack_snack_comment_path(comment.snack, comment),
        method: :delete, remote: true, "data-confirm" => "このコメントを削除してよろしいですか?", class: 'btn btn-danger btn-sm' %>
      <% end %>
    </div>
  <% end %>
</div>


