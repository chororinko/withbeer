<div class="container-fluid" style="margin-bottom: 100px; margin-top: 50px;">
  <div class="row" style="margin-left: 50px;">
    <h4><%= @sake.genre %>に合うおつまみ（<%= @quantity %>品）</h4>
  </div>

  <!--タグ検索-->
  <div class="row mt-5">
    <div class="col-2 ml-5 mr-2">
     <%= render 'public/homes/taglist', tags: @tags%>
    </div>

    <!--特定のお酒に紐づいたおつまみ一覧-->
    <div class="col d-flex flex-wrap">
      <% @sake.snacks.each do |snack| %>
        <%= render 'public/snacks/list', snack: snack %>
      <% end %>
    </div>
  </div>

  <div class="row d-flex justify-content-center mb-3">
    <%= paginate @snacks %>
  </div>
</div>
