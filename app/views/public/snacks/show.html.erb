<div class="notice">
  <%= flash[:notice] %>
</div>

<%= form_with model: @snack do |f| %>
<div class="container" style="margin-bottom: 100px;">
  <!--おつまみ情報-->
  <div class="row d-flex justify-content-center">
    <h4><%= @snack.title %></h4>
  </div>

  <div class="row">
    <div class="col">
      <%= image_tag @snack.get_image(400,400) %>
    </div>
    <table class="table table-borderless col">
      <tr>
        <td><h6>おつまみ紹介文</h6></td>
      </tr>
      <tr>
        <td><%= @snack.introduction %></td>
      </tr>
      <!--<tr>-->
        <td><%#= @tag.name %></td>
      <!--</tr>-->
      <tr>
        <td>
          <%= link_to customer_path(@snack.customer) do %>
            <%= image_tag @snack.customer.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td><%= @snack.customer.user_name %></td>
      </tr>
    </table>
  </div>
  <!--おつまみのレシピ情報-->
  <div class="row d-flex justify-content-center">
    <h4>レシピ</h4>
  </div>

  <div class="row">
    <div class="col">
      <h5>材料</h5>
    </div>
    <div class="col">
      <h5>作り方</h5>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p><%= @snack.ingredients %></p>
    </div>
    <div class="col">
      <p><%= @snack.process %></p>
    </div>
  </div>

  <% if @snack.customer == current_customer %>
    <div class="row d-flex justify-content-center">
      <%= link_to '削除する', snack_path(@snack), method: :delete, "data-confirm" => "本当に消しますか?", class: 'btn btn-danger' %>
    </div>
  <% end %>

  <div class="row d-flex justify-content-center">
    <%= link_to '編集する', edit_snack_path(@snack), class: 'btn btn-info' %>
  </div>


</div>
<% end %>
