<div class="container" style="margin-bottom: 100px; margin-top: 40px;">
  <div class="row ml-4">
    <h4><i class="fa-sharp fa-solid fa-tag"></i> <%= @tag.name %>（<%= @quantity %>品）</h4>
  </div>

  <!--タグ検索-->
  <div class="row mt-5">
    <div class="col-2 mr-5">
     <%= render 'public/homes/taglist', tags: @tags%>
    </div>

    <!--タグに紐づいた投稿一覧-->
    <div class="snack-list col d-flex flex-wrap">
      <% @snacks.each do |snack| %>
        <%= render 'public/snacks/list', snack: snack %>
      <% end %>
    </div>
  </div>

  <div class="row d-flex justify-content-center mb-3">
    <%= paginate @snacks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>