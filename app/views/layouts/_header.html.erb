<header>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container fluid">
    <a class="navbar-brand" href= "/">WithBeer</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">

        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <li><%= f.text_field :content %></li>
          <li><%= f.submit '検索' %></li>
        <% end %>

        <% if admin_signed_in? %>
          <li>
            <%= link_to '会員一覧', admin_customers_path, class: "nav-link text-light" %>
          </li>
          <li>
            <%= link_to 'お酒一覧', admin_sakes_path, class: "nav-link text-light" %>
          </li>
          <li>
            <%= link_to '今月のおすすめ履歴一覧', admin_recommendations_path, class: "nav-link text-light" %>
          </li>
          <li>
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "nav-link text-light" %>
          </li>
        <% elsif customer_signed_in? %>
          <li>
            <%= link_to customer_path(current_customer), class: "nav-link text-light" do %>
              <i class="fa-regular fa-book-open"></i>マイページ
            <% end %>
          </li>
          <li>
            <%= link_to favorites_path ,class: "nav-link text-light" do %>
              <i class="fa-solid fa-heart"></i>いいね一覧
            <% end %>
          </li>
          <li>
            <%= link_to new_snack_path, class: "nav-link text-light" do %>
              <i class="fa-regular fa-pen-to-square"></i>レシピを投稿
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link text-light" do %>
              <i class="fa-solid fa-right-from-bracket"></i>ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to customer_session_path, class: "nav-link text-light" do %>
              <i class="fa-regular fa-pen-to-square"></i>レシピを投稿
            <% end %>
          </li>
          <li>
            <%= link_to customer_session_path, class: "nav-link text-light" do %>
              <i class="fa-solid fa-right-to-bracket"></i>ログイン
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
</header>